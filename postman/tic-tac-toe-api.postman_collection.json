							"    method: 'POST',\r",
							"    header: {\r",
							"        'Content-Type': 'application/json'\r",
							"    },\r",
							"    body: {}\r",
							"}, function (err, res) {\r",
							"    if (err) {\r",
							"        console.log(\"Error creating game:\", err);\r",
							"    } else {\r",
							"        var responseJson = res.json();\r",
							"        pm.environment.set(\"gameId\", responseJson.gameId);\r",
							"        console.log(\"Game ID saved:\", responseJson.gameId);\r",
							"    }\r",
